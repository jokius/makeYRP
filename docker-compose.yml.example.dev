version: "2"
services:
  make_yrp:
    build: .
    command: ash -c "echo 'runing....' && rm -f tmp/pids/server.pid && bundle && bundle exec rails s -b 0.0.0.0"
    ports:
      - '3000:3000'
    environment:
      RAILS_SERVE_STATIC_FILES: "true"
      RAILS_LOG_TO_STDOUT: "true"
      RAILS_ENV: development
      SECRET_KEY_BASE: ""
      HOST: 'http://localhost:3000'
    volumes:
      - .:/app
    depends_on:
      - db
      - webpacker

  db:
    container_name: postgres
    image: postgres:12.1-alpine
    environment:
      PGPASSWORD_SUPERUSER: postgres
      PGPASSWORD_ADMIN: postgres
      PGPASSWORD_STANDBY: postgres
      POSTGRES_PASSWORD: postgres
    ports:
      - "5432:5432"

  webpacker:
    build: .
    environment:
      NODE_ENV: development
      RAILS_ENV: development
    command: ash -c "yarn && ./bin/webpack-dev-server --progress â€”colors --host 0.0.0.0"
    ports:
      - '3035:3035'
    volumes:
      - .:/app
