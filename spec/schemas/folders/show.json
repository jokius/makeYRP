{
  "type": "object",
  "required": ["id", "name", "parent_id", "children", "images"],
  "properties": {
    "id": { "type": "number" },
    "name": { "type": "string" },
    "parent_id": { "type": ["null", "number"] },
    "children": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "number" },
          "name": { "type": "string" }
        }
      }
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "versions"],
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "versions": {
            "type": "object",
            "required": ["url", "lazy", "thumb"],
            "properties": {
              "url": { "type": ["null", "string"] },
              "chat": { "type": ["null", "string"] },
              "lazy": { "type": ["null", "string"] },
              "thumb": { "type": ["null", "string"] }
            }
          }
        }
      }
    }
  }
}
